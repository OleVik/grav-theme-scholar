@import "../styles.base.pcss";

:root {
  --primary: #262626;
  --secondary: #3f3f3f;
  --text: #000000;
  --text-alt: #ffffff;
  --background: #b2b2b2;
  --foreground: #f5f5f5;
  --border-color: rgba(0, 0, 0, 0.3);
  --header-background: var(--primary);
  --aside-text: #e8e8e6;
  --aside-text-active: #ffffff;
  --aside-background: #68686b;
  --aside-background-active: #58585a;
  --aside-background-active-state: #3e3e40;
}
