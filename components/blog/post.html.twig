{% extends 'default.html.twig' %}

{% set body_classes = (body_classes|default('blog post page')) %}

{% if page.header.image %}
    {% do assets.addInlineCss('
    .page main {
        background-image: url("' ~ page.media[page.header.image.url ?? page.header.image].url ~ '");
        background-size: ' ~ page.header.image.size ?? "contain" ~ ';
        background-repeat: ' ~ page.header.image.repeat ?? "repeat-x" ~ ';
    }
    .page main article {
        margin-top: 10%;
    }
    ') %}
{% endif %}