{% extends 'default.html.twig' %}

{% set body_classes = (body_classes|default('blog post page')) %}

{% block article %}
<section>
    <img alt="Hero image for {{ page.title }}" src="{{ page.media[page.header.image.url ?? page.header.image].url }}" />
    <article>
        {% block content %}
        <header>
            <h1>{{ page.title }}</h1>
        </header>
        {% include 'partials/components/default/metadata.html.twig' with {'page': page} %}
        {{ navigablePage.content }}
        {% endblock %}
    </article>
</section>
{% endblock %}