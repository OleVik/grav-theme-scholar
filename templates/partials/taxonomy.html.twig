{% apply spaceless %}
<p>
    <a href="/meta/date/{{ item.date|date("Y-m-d") }}">
        <time datetime="{{ item.date|date("c") }}">{{ item.date|date(system.pages.dateformat.default) }}</time>
    </a>
{% if page.taxonomy.categories %}
    <span> {{ 'THEME_SCHOLAR.GENERIC.IN'|t }} </span>
    {% if page.taxonomy.categories is iterable %}
        {% for category in page.taxonomy.categories %}
            {% if category is iterable %}
                <a href="/meta/category/{{ category.name }}" class="category">{{ category.name|capitalize }}</a>
            {% else %}
                <a href="/meta/category/{{ category }}" class="category">{{ category|capitalize }}</a>
            {% endif %}
            {% if not loop.last %}
                <span>, </span>
            {% endif %}
        {% endfor %}
    {% else %}
        <a href="/meta/" class="category">{{ page.taxonomy.categories|capitalize }}</a>
    {% endif %}
{% endif %}
{% if page.taxonomy.tags %}
    <span> {{ 'THEME_SCHOLAR.GENERIC.WITH'|t }} </span>
    {% if page.taxonomy.tags is iterable %}
        {% for tag in page.taxonomy.tags %}
            {% if tag is iterable %}
                <a href="/meta/tag/{{ tag.name }}" class="tag">{{ tag.name|capitalize }}</a>
            {% else %}
                <a href="/meta/tag/{{ tag }}" class="tag">{{ tag|capitalize }}</a>
            {% endif %}
            {% if not loop.last %}
                <span>, </span>
            {% endif %}
        {% endfor %}
    {% else %}
        <a href="/meta/" class="tag">{{ page.taxonomy.tags|capitalize }}</a>
    {% endif %}
{% endif %}
{% if page.taxonomy.author %}
    <span> {{ 'THEME_SCHOLAR.GENERIC.BY'|t }} </span>
    {% if page.taxonomy.author is iterable %}
        {% for author in page.taxonomy.author %}
            {% if author is iterable %}
                <a href="/meta/author/{{ author.name }}" class="author">{{ author.name }}</a>
            {% else %}
                <a href="/meta/author/{{ author }}" class="author">{{ author }}</a>
            {% endif %}
            {% if not loop.last %}
                <span>, </span>
            {% endif %}
        {% endfor %}
    {% else %}
        <a href="/meta/author/{{ author.taxonomy.author }}" class="author">{{ page.taxonomy.author }}</a>
    {% endif %}
{% endif %}
</span>.</span>
</p>
{% endapply %}