<div class="searchbox">
    <label for="search-by"><i class="fa fa-search"></i></label>
    <input id="search-by" type="text" placeholder="{{ 'THEME_SCHOLAR.SEARCH.DOCS'|t }}"
           data-search-input="{{ base_url_relative }}/search.json/query"/>
    <span data-search-clear><i class="fa fa-close"></i></span>
</div>
{% if config.plugins.tntsearch.enabled %}
  <div class="adv-search">
    <i class="fa fa-sliders"></i> <a href="{{ base_url_absolute }}/tntsearch">{{ 'THEME_SCHOLAR.SEARCH.ADVANCED'|t }}</a>
  </div>
{% endif %}
