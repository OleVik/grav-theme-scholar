{% block content %}

{% block section %}
<section>
    {% for page in collection %}
    <article>
        <header>
            <a href="{{ page.url }}">
            <h2>{{ page.title }}</h2>
            {% if page.header.subtitle %}
            <h3>{{ page.header.subtitle }}</h3>
            {% endif %}
            </a>
        </header>
        <section>
        {% if page.summary %}
            {{ page.summary|strip_html_tags('h1,h2,h3,h4,h5,h6') }}
        {% else %}
            {{ page.content|strip_html_tags('h1,h2,h3,h4,h5,h6')|truncate_words }}
        {% endif %}
        </section>
    </article>
    {% endfor %}
</section>
{% endblock %}

{% endblock %}