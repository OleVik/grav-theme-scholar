{% extends 'default.html.twig' %}

{% set body_classes = (body_classes|default('page listing')) %}

{% block article %}

{% with {
    'page': page,
    'collection': page.collection
    } %}
    {{ block('content', 'partials/page/listing.html.twig') }}
{% endwith %}
{% if page.header.image %}
    {% do assets.addInlineCss('
    .page {
        background-image: url("' ~ page.media[page.header.image.url ?? page.header.image].url ~ '");
        background-size: ' ~ page.header.image.size ?? "cover" ~ ';
        background-repeat: ' ~ page.header.image.repeat ?? "no-repeat" ~ ';
    }
    .page main {
        margin-top: 10%;
    }
    ') %}
{% endif %}
{% include 'partials/components/search/wrapper.html.twig' %}
<aside>
    <header>
        {% if page.header.logo %}
            {% if page.media[page.header.logo.url ?? page.header.logo].extension == 'svg' %}
                {{ rawcontent(page.media[page.header.logo.url ?? page.header.logo].filepath) }}
            {% else %}
                <img src="{{ page.media[page.header.logo.url ?? page.header.logo].url }}" role="figure" />
            {% endif %}
        {% endif %}
        <h1>{{ page.title }}</h1>
        {{ page.content }}
    </header>
    {% with {
        'page': page,
        'collection': page.collection('aside')
        } %}
        {{ block('content', 'partials/page/listing.html.twig') }}
    {% endwith %}
</aside>

{% endblock %}
